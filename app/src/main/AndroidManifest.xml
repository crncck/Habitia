<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habitapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/habitia_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/habitia_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitApp">
        <activity android:name=".SignUpActivity"
            android:screenOrientation="sensor"></activity>
        <activity android:name=".FotoGalleryActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".SettingsActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".DetailsActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".AddHabitActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".HabitsActivity"
            android:screenOrientation="sensor"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>