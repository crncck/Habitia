<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/habitImage"
        android:layout_width="173dp"
        android:layout_height="139dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/habitName"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/habitName"
        app:layout_constraintTop_toBottomOf="@+id/habitName"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/habitDescription"
        android:layout_width="244dp"
        android:layout_height="74dp"
        android:layout_marginTop="76dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/habitImage"
        app:layout_constraintStart_toStartOf="@+id/habitImage"
        app:layout_constraintTop_toBottomOf="@+id/habitImage" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:background="#673AB7"
        android:shadowColor="@color/purple_500"
        android:text="Done"
        android:textColor="#99949A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/habitDescription"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/habitDescription"
        app:layout_constraintTop_toBottomOf="@+id/habitDescription" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>